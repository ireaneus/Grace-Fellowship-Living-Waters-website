---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Grace Fellowship and Living Waters RV" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Lora:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  /* Global styles */
  
  :root {
    --primary-color: #3b82f6;
    --secondary-color: #1e40af;
    --text-color: #1f2937;
    --background-color: #ffffff;
    --header-background: #3e585f;
    --nav-text-color: #ffffff;
    --header-text-color: antiquewhite; /* New variable for header text color */
    --dropdown-background: #ffffff;
    --dropdown-hover: #f3f4f6;
  }
  
  body {
    font-family: "EB Garamond", serif;
    margin: 0;
    padding: 0;
  }
  
  .footer {
    background-color: var(--header-background);
    color: var(--header-text-color);
    text-align: center;
  }
  
  /* Navigation styles */
  .nav-container {
    background-color: var(--header-background);
  }
  
  .nav-header {
    color: var(--header-text-color);
    background-color: var(--header-background);
    letter-spacing: .25em;
    text-align: center;
  }
  
  .nav-menu {
    color: var(--header-text-color);
  }
  
  .dropdown {
    position: relative;
    display: inline-block;
  }
  
  .dropdown-button {
    background: none;
    border: none;
    color: var(--nav-text-colorcolor);
    font-size: 1rem;
    cursor: pointer;
    padding: 0.5rem 1rem;
  }
  
  .dropdown-content {
    display: none;
    position: absolute;
    background-color: var(--dropdown-background);
    min-width: 200px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    border-radius: 4px;
    z-index: 1;
  }
  
  .dropdown-content a {
    color: var(--text-color);
    padding: 0.75rem 1rem;
    text-decoration: none;
    display: block;
  }
  
  .dropdown-content a:hover {
    background-color: var(--dropdown-hover);
  }
  
  .dropdown:hover .dropdown-content {
    display: block;
  }
  
  /* Content styles */
  .content {
    margin: 10px;
    padding: 5px;
  }
  
  .markdown-content {
    max-width: 800px;
    margin: 0 auto;
    all: revert;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    line-height: 1.6;
  }
  
  em {
    color: firebrick;
  }
  
  p, h1, h2, h3, h4, h5, h6, ul, ol, blockquote {
    font-family: "EB Garamond", serif;
    margin: 10px;
    padding: 5px;
  }
  
  .markdown-content h1,
  .markdown-content h2,
  .markdown-content h3,
  .markdown-content h4,
  .markdown-content h5,
  .markdown-content h6 {
    margin-top: 1.5em;
  }
  
  .markdown-content p {
    margin: 1em 0;
  }
  
  .markdown-content a {
    color: #3182ce;
    text-decoration: underline;
  }
  
  .markdown-content code {
    background-color: #f5f5f5;
    padding: 2px 4px;
    border-radius: 4px;
  }
  
  .markdown-content ul,
  .markdown-content ol {
    margin-left: 1em;
    margin-bottom: 1em;
  }
  
  .markdown-content blockquote {
    border-left: 4px solid #ccc;
    padding-left: 1em;
    color: #666;
    margin: 1.5em 0;
  }
  
  /* Add this rule to color italic text red */
  .markdown-content em {
    color: firebrick;
  }
  </style>
  