---
const events = [
  {
    title: "Sunday Service",
    date: "Every Sunday",
    time: "9:00 AM & 11:00 AM",
    description: "Join us for worship and the Word"
  },
  {
    title: "Bible Study",
    date: "Every Wednesday",
    time: "7:00 PM",
    description: "Mid-week Bible study and prayer"
  }
];
---

<div class="bg-white p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-gray-900 mb-4">Upcoming Events</h2>
  <div class="space-y-6">
    {events.map((event) => (
      <div class="border-b border-gray-200 pb-4 last:border-b-0 last:pb-0">
        <h3 class="text-xl font-semibold text-gray-800">{event.title}</h3>
        <p class="text-gray-600 mt-1">{event.date} at {event.time}</p>
        <p class="mt-2 text-gray-700">{event.description}</p>
      </div>
    ))}
  </div>
  <a href="/events" class="inline-block mt-6 text-indigo-600 hover:text-indigo-500">
    View All Events â†’
  </a>
</div>