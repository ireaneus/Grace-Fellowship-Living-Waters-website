---
export async function getStaticPaths() {
  const ministries = [
    {
      slug: 'youth',
      title: 'Youth Ministry',
      description: 'Empowering young people to grow in faith',
      leader: 'John Smith',
      meetingTime: 'Fridays at 6:30 PM'
    },
    {
      slug: 'worship',
      title: 'Worship Ministry',
      description: 'Leading the congregation in worship',
      leader: 'Sarah Johnson',
      meetingTime: 'Sundays at 8:00 AM'
    }
    // Add more ministries as needed
  ];

  return ministries.map(ministry => ({
    params: { ministry: ministry.slug },
    props: { ministry },
  }));
}

const { ministry } = Astro.props;
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title={`${ministry.title} | Our Church`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-900 mb-6">{ministry.title}</h1>
      <div class="prose prose-lg">
        <p class="text-gray-700 mb-4">{ministry.description}</p>
        <div class="bg-gray-50 p-6 rounded-lg mb-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-2">Ministry Details</h2>
          <p class="text-gray-700">Leader: {ministry.leader}</p>
          <p class="text-gray-700">Meeting Time: {ministry.meetingTime}</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>