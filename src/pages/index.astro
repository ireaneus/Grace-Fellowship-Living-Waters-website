---
import BaseLayout from '../layouts/BaseLayout.astro';
import LatestSermon from '../components/LatestSermon.astro';
import EventsList from '../components/EventsList.astro';
---

<BaseLayout title="Welcome to Our Church">
  <div class="bg-white">
    <div class="relative">
      <div class="mx-auto max-w-7xl">
        <div class="relative z-10 pt-14 lg:w-full lg:max-w-2xl">
          <div class="relative px-6 py-32 sm:py-40 lg:px-8 lg:py-56">
            <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
              <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
                Welcome to Our Church
              </h1>
              <p class="mt-6 text-lg leading-8 text-gray-600">
                Join us in worship and fellowship as we grow together in faith.
              </p>
              <div class="mt-10 flex items-center gap-x-6">
                <a
                  href="/about"
                  class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                >
                  Learn More
                </a>
                <a href="/contact" class="text-sm font-semibold leading-6 text-gray-900">
                  Contact Us <span aria-hidden="true">â†’</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <LatestSermon />
        <EventsList />
      </div>
    </div>
  </div>
</BaseLayout>